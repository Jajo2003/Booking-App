<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"/>
    <link rel="stylesheet" href="~/css/General.css"/>
    <script src="~/js/HeaderFooter.js"></script>
    <title>@ViewBag.Title</title>
</head>
<body>
    <div id="page-wrapper">
    <header id="Header">
        <div class="Left">
            <a asp-controller="Home" asp-action="Index">Booking</a>
        </div>
        <div class="Right">
            <div class="category-container">
                <a asp-controller="Home" asp-action="Services">Services</a>
            </div>
            <div class="category-container">
                <a asp-controller="Home" asp-action="Gallery">Gallery</a>
            </div>
            <div class="category-container">
                <a asp-controller="Home" asp-action="About">About Us</a>
            </div>
            <div class="category-container">
                <a asp-controller="Home" asp-action="ContactUs">Contact Us</a>
            </div>
        </div>
    </header>
        <nav class="navbar">

        </nav>

        <div class="Main-Wrapper">
            <main id="MainContent">
                @RenderBody()
            </main>
        </div>

        <footer id="Footer">
            <div class="Left">
                Left-Footer
            </div>
            <div class="Right">
                Right-Footer
            </div>
        </footer>
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
